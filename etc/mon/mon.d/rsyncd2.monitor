#!/usr/bin/perl
#
use strict;
$ENV{USER} = "andk";
$ENV{RSYNC_PASSWD} = "not_the_password";

open my $P, "rsync --port=8732 pause.perl.org::PAUSE 2>&1 |" or die "Could not fork: $!";
my $running;
while (<$P>){
  next unless m{ ERROR }ix;
  $running++;
}
close $P or die "Could not close: $!";
unless ($running >= 2){
  print "error message missing\n";
  exit 1;
}
