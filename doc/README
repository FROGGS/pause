/etc/cron.jobs/mysql-dump.sh -> ../../home/k/PAUSE/cron/mysql-dump.sh
/etc/cron.jobs/publish-crontab.sh -> ../../home/k/PAUSE/cron/publish-crontab.sh
/etc/cron.jobs/rm_stale_links -> ../../home/k/PAUSE/cron/rm_stale_links
